# Zsh Configuration @sashaaldrick 

# oh-my-zsh settings
export ZSH="$HOME/.oh-my-zsh"
ZSH_THEME="robbyrussell"
DISABLE_AUTO_TITLE="true"
# source omz
source $ZSH/oh-my-zsh.sh

##Â Plugin Installs
### Z directory search
source ~/.config/plugins/zsh-z.plugin.zsh
# tabtab
[[ -f ~/.config/tabtab/zsh/__tabtab.zsh ]] && . ~/.config/tabtab/zsh/__tabtab.zsh || true

## Completions
autoload -U compinit && compinit
zstyle ':completion:*' menu select

## Vim mode
bindkey -v

## Aliases
### UNIX
alias ll="ls -alG"

### Vim 
alias v='nvim'
alias vz='nvim ~/.zshrc'
alias vs="vim ~/.config/skhd/skhdrc"

### Git
alias ga="git add"
alias gaa="git add ."
alias gb="git branch -avv"
alias gc="git checkout"
alias gcb="git checkout -b"
alias gcm="git commit -m"
alias gf="git fetch & git remote prune origin"
alias gl="git log"
alias gs="git status"
alias gpl="git pull --prune"

# Yarn
alias yb="yarn build"
alias yc="yarn compile"
alias yi="yarn install"
alias yl="yarn lint"
alias yt="yarn test"
alias yv="yarn verify"

### Misc
alias bsrs="brew services restart skhd"
alias reload=". ~/.zshrc && echo 'ZSH config reloaded from ~/.zshrc'"
alias ytm="yt-dlp -x"
alias yts="ytfzf"

## Environment Variables
export HOMEBREW_NO_ENV_HINTS=1

### To get ls colours (https://superuser.com/questions/528228/how-can-i-configure-the-color-of-ls-directory-under-zsh)
export CLICOLOR=1
export LSCOLORS=ExGxBxDxCxEgEdxbxgxcxd

### NVM + yarn setup
export NVM_DIR=~/.nvm
source $(brew --prefix nvm)/nvm.sh
export PATH="$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin:$PATH"

# Foundry
export PATH="$PATH:/Users/sasha/.foundry/bin"

# on shell login
cd ~/Desktop
